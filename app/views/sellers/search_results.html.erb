<% provide(:title, "index") %>
<h2>Sellers</h2>
<%=link_to"welcome", root_path, class:"btn btn-primary" %>
<%=link_to"Sellers Search", search_path, class:"btn btn-primary" %>
<%=link_to"Create a seller",new_seller_path , class:"btn btn-primary" %>
<%=link_to"Buyers List",buyers_path ,class:"btn btn-primary-versBuyers" %>



<div class="div2" >

<% # On affiche les sellers %>

<table class="table">
 <thead>
   <tr>
     <th scope="col"><%= link_to "#", sellers_path %></th>
     <th scope="col"><%= sort_link "room", {room: @room, bedroom:@bedroom} %></th>
     <th scope="col"><%= sort_link "bedroom", {room: @room, bedroom:@bedroom} %></th>
   </tr>
  </thead>
  <tbody>
<%  @sellers.each do |seller| %>
    <tr>
      <td><%= link_to seller.id, seller_path(seller) %></td>    
      <td> <%= seller.room %></td>
      <td> <%= seller.bedroom %></td> 
      <td><%= link_to "Buyers", controller: "buyers", action:"from_sellers_to_buyers", seller_id: seller.room, class:"btn btn-primary-versBuyers" %></td>
<% end %>

 <th scope = "row">
</th>
</tr>
<%= paginate @sellers %>
</tbody>
</table>
