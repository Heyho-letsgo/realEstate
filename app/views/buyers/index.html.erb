<%= @buyers.length %>
<% end %>Buyers</h2>

<%=link_to"Welcome", root_path, class:"btn btn-primary"  %> </a>
<%=link_to"Buyers list",buyers_path, class:"btn btn-primary-versBuyers" %>
<%=link_to"Create a buyer",new_buyer_path, class:"btn btn-primary-versBuyers" %>
<%=link_to"Sellers List", sellers_path, class:"btn btn-primary" %>

<div class="div2" >
<%= form_tag(buyers_path, method: :get) do %>
  <%= text_field_tag :room, params[:room]%>
  <%= text_field_tag :bedroom, params[:bedroom]%>
  <%= submit_tag 'Search', name: nil %>
<% end %>
</div>
<% # On affiche les buyers %>

<table class="table">
 <thead>
  <tr>
      <th scope="col"><%= link_to "#", buyers_path  %> </th>
      <th scope="col"><%= sort_link "Room" %>   </th>
      <th scope="col"><%= sort_link "Bedroom" %></th>
  </tr>
  </thead>
<tbody>
<% @buyers.each do |buyer| %>
<tr>
  <td><%= link_to buyer.id, buyer_path(buyer) %></td>
  <td><%= buyer.room %></td>
  <td><%= buyer.bedroom %></td>
  <td><%= buyer.created_at %></td>
  <td><%= link_to "Sellers", controller: "sellers", action:"from_buyers_to_sellers", buyer_id: buyer.room , class:"btn btn-primary" %></td>
  <% end %>
  <th scope = "row"></th>
</tr>
<%= paginate @buyers %>
</tbody>
</table>

